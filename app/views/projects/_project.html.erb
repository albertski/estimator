<%= turbo_frame_tag dom_id(project), class: "w-1/3 p-6 flex flex-col" do %>
  <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow ">
    <a href="#" class="flex flex-wrap no-underline hover:no-underline">
      <div class="w-full font-bold text-xl text-gray-800 px-6 mt-5 ">
        <%= project.title %>
      </div>
      <p class="text-gray-800 text-base px-6 mb-5">
        <%= project.description %>
      </p>
    </a>
  </div>
  <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
    <div class="flex items-center justify-end">

      <%= button_to project, method: :delete do %>
         <button class="mx-auto lg:mx-0 hover:underline gradient font-bold rounded-full my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
          Delete <%= image_tag "trash.svg", size: "20x20", class: "inline" %>
         </button>
      <% end %>
    </div>
  </div>
<% end %>


