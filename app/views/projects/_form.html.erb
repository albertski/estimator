
<div class="mt-2">
  <%= form_with(model: project) do |form| %>
    <div class="bg-white shadow px-4 py-5 lg:rounded-lg sm:p-6 bg-blue-50">
      <h3 class="text-lg font-medium leading-6 text-gray-900 uppercase font-bold">Create a new project</h3>

      <% if project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
            <% project.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mt-5">
        <%= form.label :title, class: "mb-2 uppercase font-bold text-lg text-grey-darkest min-w-full" %>
        <%= form.text_field :title, class: "border py-2 px-3 text-grey-darkest min-w-full"  %>
      </div>

      <div class="mt-5">
        <%= form.label :description, class: "mb-2 uppercase font-bold text-lg text-grey-darkest min-w-full" %>
        <%= form.text_field :description, class: "border py-2 px-3 text-grey-darkest min-w-full"  %>
      </div>

      <div class="mt-5">
         <%= form.submit "Create Project", class: "block bg-indigo-900 hover:bg-indigo-200 text-white uppercase text-lg mx-auto p-4 rounded" %>
      </div>
    </div>
  <% end %>
</div>
